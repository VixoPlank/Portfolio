---
import NextJS from "../icons/NextJS.astro";
import ReactJS from "../icons/ReactJS.astro";
import StyledComponents from "../icons/StyledComponents.astro";
import Tailwind from "../icons/Tailwind.astro";
import ViteJS from "../icons/ViteJS.astro";

const TAGS = {
  NEXT: {
    name: "Next.js",
    class: "bg-black text-white",
    icon: NextJS,
  },

  REACT: {
    name: "React.js",
    class: "bg-[#0D6D8C] text-white",
    icon: ReactJS,
  },

  TAILWIND: {
    name: "Tailwind CSS",
    class: "bg-[#003159] text-white",
    icon: Tailwind,
  },

  STYLED_COMPONENTS: {
    name: "Styled Components",
    class: "bg-[#dd6f93] text-white",
    icon: StyledComponents,
  },

  VITE: {
    name: "Vite.js",
    class: "bg-[#B63CFF] text-white",
    icon: ViteJS,
  },
};
const PROJECTS = [
  {
    title: "Cotizador de Seguros de Auto",
    description:
      "Proyecto Cotizador de Seguros en React con TailwindCSS, Custom Hooks, useContext Vite y mucho mÃ¡s.",
    link: "https://cotizador-seguros-two.vercel.app/",
    github: "https://github.com/VixoPlank/cotizador-seguros",
    image: "/projects/cotizador-seguros.webp",
    tags: [TAGS.REACT, TAGS.TAILWIND, TAGS.VITE],
  },
];
---

{
  PROJECTS.map(({ image, title, description, link, tags }) => (
    <article>
      <a href={link} target="_blank">
        <h3 class="text-2xl font-semibold text-yellow-800 dark:text-yellow-200 mb-2">
          {title}
        </h3>
      </a>
      <p class="text-lg mb-4 text-pretty">{description}</p>
      <ul class="flex gap-x-2 flex-row mb-2">
        {tags.map((tag) => (
          <li>
            <span
              class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2 border border-white/10`}
            >
              <tag.icon class="size-4" />
              {tag.name}
            </span>
          </li>
        ))}
      </ul>
      <img
        loading="lazy"
        class="rounded shadow-2xl shadow-white/10 aspect-video"
        src={image}
        alt={`Captura de pantalla del proyecto ${image}`}
      />
    </article>
  ))
}
